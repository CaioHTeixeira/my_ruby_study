    "version": "0.2.0",
    "configurations": [
        {
            "name": "Rails server",
            "type": "Ruby",
            "request": "launch",
            "program": "${workspaceRoot}/bin/rails",
            "args": [
                "server"
            ]
        },
        {
            "name": "Debug Local File",
            "type": "Ruby",
            "request": "launch",
            "program": "${workspaceRoot}/main.rb"
        },
        {
            "type": "ruby-debug",
            "request": "launch",
            "name": "RSpec",
            "program": "rspec",
            "programArgs": [
                "${workspaceFolder}"
            ],
            "useBundler": false
        },
        
        {
            "type": "ruby-debug",
            "request": "launch",
            "name": "Launch File",
            "program": "${workspaceFolder}/${command:AskForProgramName}",
            "programArgs": [],
            "useBundler": false
        }
    ]
}